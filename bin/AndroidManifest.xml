                <action android:name="com.Ted.thenewboston.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.Ted.thenewboston.AboutUs"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.Ted.thenewboston.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.Ted.thenewboston.TextPlay"
            android:label="@string/app_name" >
            
